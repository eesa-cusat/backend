# ==============================================
# EESA Backend Environment Configuration
# Copy this file to .env and fill in your values
# ==============================================

# ==============================================
# CORE DJANGO SETTINGS
# ==============================================

# Django secret key - Generate a new one for production
# You can generate one at: https://djecrety.ir/
SECRET_KEY=your-super-secret-key-here

# Debug mode - MUST be False in production
DEBUG=False

# ==============================================
# DOMAIN CONFIGURATION
# ==============================================

# Backend domain/hosts (your backend URL)
ALLOWED_HOSTS=your-backend-domain.com,*.onrender.com

# Frontend domain configuration
# CORS (Cross-Origin Resource Sharing) - allows your frontend to access the API
CORS_ALLOWED_ORIGINS=https://eesacusat.in,https://www.eesacusat.in

# CSRF (Cross-Site Request Forgery) protection - must match your frontend domain
CSRF_TRUSTED_ORIGINS=https://eesacusat.in,https://www.eesacusat.in

# ==============================================
# DATABASE CONFIGURATION (Production)
# ==============================================

# PostgreSQL Database (Recommended for production)
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=your_database_host
DB_PORT=5432

# ==============================================
# CLOUDINARY CONFIGURATION (File Storage)
# ==============================================

# Get these from your Cloudinary dashboard: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ==============================================
# DEVELOPMENT OVERRIDES (Optional)
# ==============================================

# Development CORS origins (for local development)
DEV_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173

# Development CSRF origins (for local development)
DEV_CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173

# ==============================================
# DEPLOYMENT PLATFORM SPECIFIC
# ==============================================

# These are usually set automatically by your deployment platform:
# - Render, Railway, Heroku, etc. will set some of these automatically
# - You might need to set ALLOWED_HOSTS and domain configurations manually

# Example for Render:
# ALLOWED_HOSTS=your-app-name.onrender.com

# Example for Railway:
# ALLOWED_HOSTS=your-app-name.railway.app

# Example for Heroku:
# ALLOWED_HOSTS=your-app-name.herokuapp.com
