# EESA Backend Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# Core Django Settings
SECRET_KEY=your-super-secret-key-here-generate-new-one
DEBUG=False

# PostgreSQL Database Configuration (Supabase)
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-supabase-database-password
DB_HOST=db.your-project-ref.supabase.co
DB_PORT=5432

# Cloudinary Configuration for Media Storage
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Allowed Hosts (Production domains)
ALLOWED_HOSTS=eesacusat.in,www.eesacusat.in,your-backend-domain.onrender.com

# CORS and CSRF Settings (Frontend domains)
CORS_ALLOWED_ORIGINS=https://eesacusat.in,https://www.eesacusat.in
CSRF_TRUSTED_ORIGINS=https://eesacusat.in,https://www.eesacusat.in

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# Redis Configuration (Recommended for production - Upstash)
# Get this from: https://upstash.com (Free tier available)
# Format: rediss://default:password@your-endpoint.upstash.io:6379
REDIS_URL=rediss://default:your-upstash-password@your-endpoint.upstash.io:6379
# Alternative variable name (Upstash default):
# UPSTASH_REDIS_URL=rediss://default:your-upstash-password@your-endpoint.upstash.io:6379

# Monitoring and Error Tracking (Optional)
# SENTRY_DSN=your-sentry-dsn-for-error-monitoring

# Production Deployment
PORT=8000
